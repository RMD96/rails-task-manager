<div class="mx-auto" style="width: 200px;">

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<button type="button" class="btn btn-secondary"><%= link_to 'Go back', tasks_path %></button>

</div>
