<div class="container mt-5">
  <h1 class="text-center">All tasks</h1>

  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="task-status <%= task.completed ? 'completed' : 'not-completed' %>">
          <i class="fas <%= task.completed ? 'fa-check'.html_safe : 'fa-times'.html_safe %>"></i>
        </span>
        <%= link_to task.title, task_path(task), class: 'task-link' %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add a new task', tasks_new_path, class: 'btn btn-primary mt-3' %>
</div>
